# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true


[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.js]
trim_trailing_whitespace = false # i want to use auto-save feature in vscode, so i have to disable this.

[Makefile]
indent_style = tab

